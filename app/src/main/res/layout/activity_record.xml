<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.RecordActivity">

    <Button
        android:id="@+id/btnLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:padding="10dp"
        android:text="@string/ottieni_localizzazione"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/txtLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnStartRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:padding="10dp"
        android:text="@string/avvia_registrazione"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnStopRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/interrompi_registrazione"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/btnPlayAudio"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:drawableBottom="@drawable/play_w"
            android:gravity="center"
            android:padding="15dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnStopAudio"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/grey"
            android:drawableTop="@drawable/stop_w"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="invisible" />

    </LinearLayout>

    <Button
        android:id="@+id/btnDeleteRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancella_registrazione"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnConfirmRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conferma_registrazione"
        android:visibility="invisible" />

</LinearLayout>
